<div>
<div class="card_list">
  <h1><%= @list.name %></h1>



  <!-- card_container -->
  <div class= "flex-container">
    <% @list.bookmarks.each do |bookmark|%>
    <!-- card_bookmark -->
    <div class="card_bookmark" >
      <p><%= bookmark.movie.title %></p>
      <p><% bookmark.movie.rating.times do %> <i class="fas fa-star" style= "color: orange"></i><% end %></p>
      <p>Synopsis:</p>
      <p><%= bookmark.movie.overview %></p>
    <!-- image of the movie start-->
      <%= image_tag bookmark.movie.poster_url, class:"movie-image", style:"width: 100px; height:auto;" %>
    <!-- image of the movie end -->



      <p><%= link_to "delete this movie", bookmark_path(bookmark), method: :delete, data: { confirm: "SURE?" }, class: "dropdown-item" %></p>
    </div>
    <!-- card_bookmark end -->
    <% end %>
  </div>
<!-- container end-->
</div>

<div class="back">
     <%= link_to "back to the lists", lists_path%>
</div>



<!-- FORM start -->

<%= simple_form_for ([@list, @bookmark]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>


  <div class="form_inputs row justify-content-center">
    <div class="col-8">
<!-- LOOK AT f.association on https://github.com/heartcombo/simple_form#associations -->
    <p><%= f.association :list, as: :select %></p>
    <p><%= f.association :movie %></p>
    <p><%= f.input :comment %></p>
    <p><%= f.input :picture, as: :file %></p>


  <div class="form_actions row justify-content-center">
    <%= f.submit "add the movie", class:"btn btn-warning add-cancel" %>
   <%= link_to "cancel", list_path(@list), class:"btn btn-dark add-cancel" %>
  </div>
</div>
</div>
<% end %>

<!-- FORM end -->





